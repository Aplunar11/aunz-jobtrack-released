@model JobTrack.Models.Employee.EmployeeLogin
@{
    ViewBag.Title = "Employee Login";
}

@using (Html.BeginForm("EmployeeLogin", "Employee", FormMethod.Post, new { role = "form" }))
{
    <div class="form-group">
        <div class="input-group input-group-lg mb-2">
            <div class="input-group-prepend">
                <div class="input-group-text"><i class="fa fa-user text-danger"></i></div>
                @Html.TextBoxFor(model => model.ID, new { @class = "form-control", placeholder = "Username", name = "eid", type = "text" })

            </div>

        </div>
    </div>
    <div class="form-group">
        <div class="input-group input-group-lg mb-2">
            <div class="input-group-prepend">
                <div class="input-group-text"><i class="fa fa-lock text-danger"></i></div>
                @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password", name = "password", type = "password" })

            </div>
        </div>
    </div>
