    <div class="form-group">
        <div class="text-center">
            <input type="submit" value="Login" class="btn btn-success">
        </div>
    </div>

    <script type="text/javascript">
                $(function () {
                    var a = '@TempData["Message"]';
                    var b = '@TempData["Toastr"]';
                    if ((a != '') && (b != '') && (b == "warning")) {
                        toastr.warning("", a)
                    }
                    else if ((a != '') && (b != '') && (b == "info")) {
                        toastr.info("", a)
                    }
                    else if ((a != '') && (b != '') && (b == "success")) {
                        toastr.success("", a)
                    }
                    else if ((a != '') && (b != '') && (b == "error")) {
                        toastr.error("", a)
                    }
                })

    </script>

}

