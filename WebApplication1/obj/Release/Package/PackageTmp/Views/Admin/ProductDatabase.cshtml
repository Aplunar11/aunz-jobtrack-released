                        "visible": false,
                        "searchable": false
                    }
                ],
                columns: [
                    {
                        "className": 'details-control1',
                        "orderable": false,
                        "data": null,
                        "defaultContent": ''
                    },
                    { "data": "PubSchedID" },
                    { "data": "isSPI" },
                    { "data": "OrderNumber" },
                    { "data": "BudgetPressMonth" },
                    { "data": "PubSchedTier" },
                    { "data": "PubSchedTeam" },
                    { "data": "BPSProductID" },
                    { "data": "LegalEditor" },
                    { "data": "ChargeType" },
                    { "data": "ProductChargeCode" },
                    { "data": "BPSProductIDMaster" },
                    { "data": "BPSSublist" },
                    { "data": "ServiceUpdate" },
                    { "data": "BudgetPressDate" },
                    { "data": "RevisedPressDate" },
                    { "data": "ReasonForRevisedPressDate" },
                    { "data": "ServiceNumber" },
                    { "data": "ForecastPages" },
                    { "data": "ActualPages" },
                    { "data": "DataFromLE" },
                    { "data": "DataFromLEG" },
                    { "data": "DataFromCoding" },
