@section scripts
{

    <script type="text/javascript">
        //TBD
        moment.updateLocale(moment.locale(), { invalidDate: "TBD" });
        // Setup - add a text input to each footer cell
        $('#tblData1 tfoot th').each(function () {
            var title = $(this).text();
            $(this).html('<input type="text" placeholder="' + title + '" />');
        });
        $(document).ready(function () {
            //
            var tableData1 = $('#tblData1').DataTable({
                "ajax": {
                    "url": "@Url.Action("GetJobReassignmentData", "LE")",
                    "dataSrc": "",
                    "type": "GET",
                    "datatype": "json"
                },
                "columnDefs": [
                    //center all data
                    { "className": "dt-center", "targets": "_all" }
                    ,
                    {
                        "targets": [1],
                        "visible": false,
                        "searchable": false
                    }],
                columns: [
                    {
                        "className": 'details-control3',
                        "orderable": false,
                        "data": null,
                        "defaultContent": ''
                    },
                    { "data": "TransactionLogID" },
                    { "data": "JobNumber" },
                    { "data": "BPSProductID" },
                    { "data": "ServiceNumber" },
                    { "data": "CurrentOwner" },
                    {
                        "data": "DateUpdated",
                        "render": function (value) {
                            if (value === null) return "";
                            return moment(value).format('D/MMM/YY');
                        }
                    }
                ],
                //order: [[5, 'desc']],
                dom: 'Bfrtip',
                buttons: {
                    //reset class and change the rendered tag
                    //from <button> to <i>
                    dom: {
                        button: {
                            tag: 'i',
                            className: ''
                        }
                    },
                    //since we now have completely unstyled icons add
                    //some space between them trough a .custom-btn class
                    buttons: [
                        {
                            titleAttr: 'Copy',
                            extend: 'copyHtml5',
                            className: 'custom-btn fa fa-clipboard',
                            text: ''
                        },
                        {
                            titleAttr: 'Download as Excel',
                            extend: 'excelHtml5',
                            className: 'custom-btn fa fa-file-excel-o',
                            text: ''
                        },
                        {
                            titleAttr: 'Download as CSV',
                            extend: 'csvHtml5',
                            className: 'custom-btn fa fa-file-text-o',
                            text: ''
                        },
                        {
                            titleAttr: 'Download as PDF',
                            extend: 'pdfHtml5',
                            className: 'custom-btn fa fa-file-pdf-o',
                            text: ''
                        }

                    ]
                },
                initComplete: function () {
                    // Apply the search
                    //scrollx initiator
                    $('#tblData1').wrap("<div style='overflow:auto; width:100%;position:relative;'></div>");
                    //init = false;
                    this.api().columns().every(function () {
                        var that = this;

                        $('input', this.footer()).on('keyup change clear', function () {
                            if (that.search() !== this.value) {
                                that
                                    .search(this.value)
                                    .draw();
                            }
                        });
                    });
                },
                destroy: true
            });
            $('#tblData1 tbody').on('click', 'td.details-control3', function () {
                var tr = $(this).closest('tr');
                var row = tableData1.row(tr);
                var rowData = row.data();
                var dataNew = tableData1.row(this).data();
                var date = new Date(parseInt(dataNew['DateUpdated'].substr(6)));
                var formatted = date.getFullYear() + "-" +
                    ("0" + (date.getMonth() + 1)).slice(-2) + "-" +
                    ("0" + date.getDate()).slice(-2) + " " + date.getHours() + ":" +
                    date.getMinutes();
                    $.ajax({
                        "url": "@Url.Action("UpdateJobReassignmentLE", "JobReassignment")",
                        "contentType": "application/json; charset=utf-8",

                        data: {
                            TransactionLogID: dataNew['TransactionLogID'],
                            JobNumber: dataNew['JobNumber'],
                            BPSProductID: dataNew['BPSProductID'],
                            ServiceNumber: dataNew['ServiceNumber'],
                            CurrentOwner: dataNew['CurrentOwner'],
                            DateUpdated: formatted
                        },
                        success: function (data) {
                            $('#modalWrapper').html(data);
                            $('#UpdateJobReassignmentModalLE').modal('show');

                        }
                    });
            });
        });
    </script>
}