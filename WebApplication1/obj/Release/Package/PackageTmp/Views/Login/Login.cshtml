@model JobTrack.Models.Login.LoginViewModel
@using CaptchaMvc.HtmlHelpers
@using CaptchaMvc
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<style>
    #CaptchaInputText {
        text-transform: uppercase;
    }

    .brand {
        width: 200px;
        height: auto;
        overflow: hidden;
        margin: 10px auto;
        position: relative;
        z-index: 1;
    }

        .brand img {
            width: 100%;
        }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="login-panel">
        @if (null != TempData["alertMessage"])
        {
            <script type="text/javascript">
       alert("@TempData["alertMessage"]");
            </script>
        }
        @if (ViewBag.errormessage != null)
        {
            <p class="alert alert-danger" id="successMessage">@ViewBag.errormessage</p>}


        <div class="form-group">
            <div class="col-md-12 col-xs-12 text-center">
                <h1>AUNZ JobTrack</h1>
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">

            <div class="col-md-12 col-xs-12">
                @Html.LabelFor(model => model.Username)
                @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @maxlength = 45, autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-12 col-xs-12">
                @Html.LabelFor(model => model.Password)
                @Html.PasswordFor(model => model.Password, new { @class = "form-control", @maxlength = 45, autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <div class="col-md-12 col-xs-12">
                <div id="captcha" class="captcha">
                    @Html.Label("Captcha")
                    @Html.Captcha("Refresh", "Enter the text you see above", 5, "<span class='text-danger'>Enter Captcha</span>", true)
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col text-center">
                <input id="Submit1" class="btn btn-outline-success" type="submit" value="Login">
            </div>

        </div>

    </div>
}
